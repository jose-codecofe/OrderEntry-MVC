@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Function/Autentification.js")"></script>
</head>
<body>
    <div id="contLogin">
        <div class="form-horizontal" style="padding:20px;">
            <h1>Login</h1>
            <br /><br />
            Email: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input type="text" id="txtEmailL" /><br /><br />
            Password: <input type="password" id="txtPasswordL" /><br />
            <br />
            <input type="submit" value="Sing In" onclick="Login();" class="btn btn-default" />&nbsp;&nbsp;
            <input type="submit" value="I don't Remember password" onclick="ForgotPassword();" class="btn btn-default" /><br />
            <br />
            <div style="color:red;" id="dvMessage"></div>
            <a href="#" onclick="Register();">Register</a>
        </div>
    </div>

    <div id="contRegister">
        <div class="form-horizontal" style="padding:20px;">
            <h1>User Register</h1>
            <hr />

            <div class="form-group">
                Email:
                <div class="col-md-10">
                    <input type="text" id="txtEmail" />
                </div>
            </div>
            <br />
            <div class="form-group">
                Password:
                <div class="col-md-10">
                    <input type="password" id="txtPassword" />
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save " onclick="SaveUser();" class="btn btn-default" />&nbsp;&nbsp;
                    <input type="submit" value="Cancel" onclick="Cancelar();" class="btn btn-default" />
                </div>
            </div>
        </div>

    </div>
</body>
</html>
